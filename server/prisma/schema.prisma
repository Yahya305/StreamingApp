generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Video {
    id           String   @id @default(uuid())
    title        String
    description  String?
    thumbnailUrl String?
    hlsPath      String?
    originalPath String?
    progress     Int      @default(0)
    status       String   @default("PENDING") // PENDING, PROCESSING, READY, FAILED
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}
